{
  "name": "capitalisk-core",
  "version": "1.0.0",
  "description": "A full Capitalisk node implementation",
  "main": "index.js",
  "scripts": {
    "postgres:startdb": "docker run --name capitalisk_main --restart always -p 5432:5432 -e POSTGRES_PASSWORD=ldpos -e POSTGRES_USER=ldpos -d postgres",
    "postgres:createdb": "createdb capitalisk_main -h 172.17.0.2 -U ldpos",
    "docker:build": "docker build -t capitalisk .",
    "docker:run": "docker run -d -p 7010:7010 -p 7001:7001 --name capitalisk-core --restart always capitalisk",
    "docker:compose": "docker-compose up -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Capitalisk/capitalisk-core.git"
  },
  "keywords": [
    "capitalisk",
    "lisk",
    "node",
    "dex"
  ],
  "author": "Jonathan Gros-Dubois",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Capitalisk/capitalisk-core/issues"
  },
  "homepage": "https://github.com/Capitalisk/capitalisk-core#readme",
  "dependencies": {
    "ldem": "^5.1.1",
    "ldpos-chain": "^2.1.2",
    "ldpos-knex-dal": "^1.3.0",
    "lisk-dex": "^11.2.7",
    "lisk-dex-http-api": "^6.0.0"
  }
}
