{
  "name": "capitalisk-core",
  "version": "1.0.0",
  "description": "A full Capitalisk node implementation",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "postgres:mainnet:start": "docker run --name capitalisk_main --restart always -p 5432:5432 -e POSTGRES_PASSWORD=ldpos -e POSTGRES_USER=ldpos -e POSTGRES_DB=capitalisk_main -d postgres:13-alpine",
    "postgres:mainnet:stop": "docker stop capitalisk_main",
    "postgres:mainnet:remove": "docker rm capitalisk_main",
    "postgres:mainnet:reset": "yarn postgres:stop && yarn postgres:remove",
    "postgres:mainnet:createdb": "createdb capitalisk_main -h $POSTGRES_HOST -U ldpos",
    "postgres:testnet:start": "docker run --name capitalisk_test --restart always -p 5432:5432 -e POSTGRES_PASSWORD=ldpos -e POSTGRES_USER=ldpos -e POSTGRES_DB=capitalisk_test -d postgres:13-alpine",
    "postgres:testnet:stop": "docker stop capitalisk_test",
    "postgres:testnet:remove": "docker rm capitalisk_test",
    "postgres:testnet:reset": "yarn postgres:testnet:stop && yarn postgres:testnet:remove",
    "postgres:testnet:createdb": "createdb capitalisk_test -h $POSTGRES_HOST -U ldpos",
    "start:docker:mainnet": "docker-compose up"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Capitalisk/capitalisk-core.git"
  },
  "keywords": [
    "capitalisk",
    "lisk",
    "node",
    "dex"
  ],
  "author": "Jonathan Gros-Dubois",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Capitalisk/capitalisk-core/issues"
  },
  "homepage": "https://github.com/Capitalisk/capitalisk-core#readme",
  "dependencies": {
    "ldem": "^5.1.1",
    "ldpos-chain": "^3.1.1",
    "ldpos-chain-crypto": "^4.0.0",
    "ldpos-knex-dal": "^2.0.1",
    "lisk-dex": "^12.0.3",
    "lisk-dex-http-api": "^6.0.0"
  }
}
